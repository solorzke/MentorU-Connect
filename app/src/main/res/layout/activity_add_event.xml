<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".CoachingLog.RequestMeeting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CC0000"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@android:color/background_light"
                app:fontFamily="@font/open_sans"
                android:textSize="15sp"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/create_event_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Add Event"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:textColor="@android:color/background_light"
                app:fontFamily="@font/open_sans"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:textColor="@android:color/background_dark"
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@android:drawable/ic_menu_info_details"
                android:hint="Title:"
                android:inputType="textCapWords"
                app:fontFamily="@font/open_sans"/>

            <EditText
                android:textColor="@android:color/background_dark"
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:hint="Location:"
                android:inputType="textCapWords"
                app:fontFamily="@font/open_sans"/>


            <EditText
                android:textColor="@android:color/background_dark"
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:cursorVisible="false"
                android:drawableLeft="@android:drawable/ic_menu_today"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:inputType="date"
                android:hint=" Date:"
                app:fontFamily="@font/open_sans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/event_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:inputType="time"
                        android:drawableLeft="@android:drawable/ic_menu_recent_history"
                        android:focusableInTouchMode="false"
                        android:hint="Start Time:"
                        app:fontFamily="@font/open_sans"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/event_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:inputType="time"
                        android:drawableLeft="@android:drawable/ic_menu_recent_history"
                        android:focusableInTouchMode="false"
                        android:hint="End Time:"
                        app:fontFamily="@font/open_sans"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdde0"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp">

                <EditText
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/event_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="Purpose:"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    app:fontFamily="@font/open_sans"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dbdde0"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>