<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoachingLog.Meeting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CC0000"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Part Members: "
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                app:fontFamily="@font/open_sans" />

            <TextView
                android:id="@+id/party"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User 1 and User 2"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15sp"
                app:fontFamily="@font/open_sans" />

        </LinearLayout>


        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:enabled="false"
            android:hint="Title:"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_dark"
            app:fontFamily="@font/open_sans" />

        <EditText
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:enabled="false"
            android:hint="Location:"
            android:inputType="textCapWords"
            android:textColor="@android:color/background_dark"
            app:fontFamily="@font/open_sans" />


        <EditText
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:cursorVisible="false"
            android:drawableLeft="@android:drawable/ic_menu_today"
            android:enabled="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint=" Date:"
            android:inputType="date"
            android:textColor="@android:color/background_dark"
            app:fontFamily="@font/open_sans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/event_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:drawableLeft="@android:drawable/ic_menu_recent_history"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:hint="Start Time:"
                    android:inputType="time"
                    android:textColor="@android:color/background_dark"
                    app:fontFamily="@font/open_sans" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/event_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:drawableLeft="@android:drawable/ic_menu_recent_history"
                    android:enabled="false"
                    android:focusableInTouchMode="false"
                    android:hint="End Time:"
                    android:inputType="time"
                    android:textColor="@android:color/background_dark"
                    app:fontFamily="@font/open_sans" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <EditText
                android:id="@+id/event_purpose"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:enabled="false"
                android:gravity="top|left"
                android:hint="Purpose:"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="1"
                android:scrollbars="vertical"
                android:textColor="@android:color/background_dark"
                app:fontFamily="@font/open_sans" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>