<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="467dp"
                android:layout_height="229dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.146" />

            <TextView
                android:id="@+id/acc_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="15dp"
                android:text="Name:"
                android:textColor="#CC0000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/acc_stu_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/acc_stu_name"
                android:layout_alignLeft="@id/acc_stu_name"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="35dp"
                android:background="@null"
                android:focusable="false"
                android:text="Your Name"
                android:textColor="#1c1475"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acc_stu_ucid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_name"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="15dp"
                android:text="UCID:"
                android:textColor="#CC0000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acc_stu_ucid_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_name_1"
                android:layout_alignStart="@id/acc_stu_ucid"
                android:layout_alignLeft="@id/acc_stu_ucid"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="14dp"
                android:text="Your UCID"
                android:textColor="#1c1475"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acc_stu_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_ucid"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="15dp"
                android:text="Email:"
                android:textColor="#CC0000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/acc_stu_email_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_ucid_1"
                android:layout_alignStart="@id/acc_stu_email"
                android:layout_alignLeft="@id/acc_stu_email"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="11dp"
                android:background="@null"
                android:focusable="false"
                android:text="Your Email"
                android:textColor="#1c1475"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acc_stu_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_email"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="15dp"
                android:text="Degree:"
                android:textColor="#CC0000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/acc_stu_degree_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_email_1"
                android:layout_alignStart="@+id/acc_stu_degree"
                android:layout_alignLeft="@id/acc_stu_degree"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:focusable="false"
                android:text="Your Degree"
                android:textColor="#1c1475"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/acc_stu_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_degree"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="15dp"
                android:text="Club:"
                android:textColor="#CC0000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/acc_stu_club_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acc_stu_degree_1"
                android:layout_alignStart="@+id/acc_stu_club"
                android:layout_alignLeft="@id/acc_stu_club"
                android:layout_marginStart="92dp"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:focusable="false"
                android:text="Your Club"
                android:textColor="#1c1475"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_acc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:text="Edit"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/done_acc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:text="Done"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/class_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="Class"
                            android:textColor="#CC0000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/class_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginLeft="50dp"
                            android:text="Title"
                            android:textColor="#CC0000"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/edit_class_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:text="Edit"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/done_class_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:text="Done"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/class_id_1"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:focusable="false"
                            android:hint="Enter ID"
                            android:maxLength="8"
                            android:text=""
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/class_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_name"
                            android:layout_alignLeft="@+id/class_id_1"
                            android:layout_marginLeft="23dp"
                            android:focusable="false"
                            android:maxLength="30"
                            android:hint="Enter Class Title"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/class_id_2"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:focusable="false"
                            android:maxLength="8"
                            android:hint="Enter ID"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/class_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/class_id_2"
                            android:layout_marginLeft="23dp"
                            android:focusable="false"
                            android:maxLength="30"
                            android:hint="Enter Class Title"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/class_id_3"
                            android:layout_width="98dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_id_2"
                            android:layout_marginLeft="20dp"
                            android:focusable="false"
                            android:maxLength="8"
                            android:text=""
                            android:hint="Enter ID"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/class_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_title_2"
                            android:layout_alignLeft="@+id/class_id_3"
                            android:layout_marginLeft="23dp"
                            android:focusable="false"
                            android:hint="Enter Class Title"
                            android:maxLength="30"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/class_id_4"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_id_3"
                            android:layout_marginLeft="20dp"
                            android:focusable="false"
                            android:hint="Enter ID"
                            android:maxLength="8"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/class_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_title_3"
                            android:layout_alignLeft="@+id/class_id_4"
                            android:layout_marginLeft="23dp"
                            android:focusable="false"
                            android:hint="Enter Class Title"
                            android:maxLength="30"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/class_id_5"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_id_4"
                            android:layout_marginLeft="20dp"
                            android:focusable="false"
                            android:hint="Enter ID"
                            android:maxLength="8"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/class_title_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_title_4"
                            android:layout_alignLeft="@+id/class_id_5"
                            android:layout_marginLeft="23dp"
                            android:focusable="false"
                            android:hint="Enter Class Title"
                            android:maxLength="30"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/class_id_6"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_id_5"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="5dp"
                            android:focusable="false"
                            android:hint="Enter ID"
                            android:maxLength="8"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/class_title_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/class_title_5"
                            android:layout_alignLeft="@+id/class_id_6"
                            android:layout_marginLeft="23dp"
                            android:layout_marginBottom="5dp"
                            android:focusable="false"
                            android:hint="Enter Class Title"
                            android:maxLength="30"
                            android:textColor="#1c1475"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>