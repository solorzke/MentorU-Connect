<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".CoachingLog.RequestStatusLog.MeetingStatus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Party: "
                        android:textSize="20sp"
                        app:fontFamily="@font/open_sans"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"/>

                    <TextView
                        android:id="@+id/meeting_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User #2"
                        android:textSize="20sp"
                        app:fontFamily="@font/open_sans"
                        android:textColor="@android:color/holo_red_dark"/>

                </LinearLayout>


                <EditText
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_info_details"
                    android:hint="Title:"
                    android:enabled="false"
                    android:inputType="textCapWords"
                    app:fontFamily="@font/open_sans"/>

                <EditText
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/event_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_myplaces"
                    android:hint="Location:"
                    android:inputType="textCapWords"
                    android:enabled="false"
                    app:fontFamily="@font/open_sans"/>


                <EditText
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/event_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:cursorVisible="false"
                    android:drawableLeft="@android:drawable/ic_menu_today"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:inputType="date"
                    android:hint=" Date:"
                    android:enabled="false"
                    app:fontFamily="@font/open_sans"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <EditText
                            android:textColor="@android:color/background_dark"
                            android:id="@+id/event_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:inputType="time"
                            android:drawableLeft="@android:drawable/ic_menu_recent_history"
                            android:focusableInTouchMode="false"
                            android:hint="Start Time:"
                            android:enabled="false"
                            app:fontFamily="@font/open_sans"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <EditText
                            android:textColor="@android:color/background_dark"
                            android:id="@+id/event_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:inputType="time"
                            android:drawableLeft="@android:drawable/ic_menu_recent_history"
                            android:focusableInTouchMode="false"
                            android:hint="End Time:"
                            android:enabled="false"
                            app:fontFamily="@font/open_sans"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp">

                    <EditText
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/event_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:hint="Purpose:"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="1"
                        android:scrollbars="vertical"
                        android:enabled="false"
                        app:fontFamily="@font/open_sans"/>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/respond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respond"
                android:background="#50c878"
                android:textColor="@android:color/background_light"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>